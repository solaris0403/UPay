<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        style="@style/UActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_vertical_height">

        <ImageButton
            android:layout_width="@dimen/titlebar_vertical_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_chevron_left_white_48dp"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安全问题"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_text_size" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="安全信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"

            android:layout_width="match_parent"
            android:text="安全信息介绍"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:id="@+id/txt_question"
            android:text="您宠物的名字:"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        android:id="@+id/edt_answer"
        android:gravity="center_vertical"
        android:text="123"
        android:layout_height="@dimen/normal_edittext_height" />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_height="@dimen/normal_edittext_height">
        <EditText
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="获取验证码"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@android:color/white"
            android:background="@drawable/sel_btn_login"
            android:layout_height="match_parent" />

    </LinearLayout>
    <Button
        android:text="确定"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@android:color/white"
        android:background="@drawable/sel_btn_login"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/btn_goon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>