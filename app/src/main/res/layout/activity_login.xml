<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/avatar_height_margin"
        android:background="@mipmap/ic_mugshot" />

    <LinearLayout
        android:id="@+id/lyt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_avatar"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/normal_text_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/default_text_color"
                android:text="账号"
                android:layout_height="match_parent" />
            <EditText
                android:background="@null"
                android:textSize="@dimen/normal_text_size"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/default_text_color"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/normal_text_size"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:inputType="phone"
                android:textColor="@color/default_text_color"
                android:background="@null"
                android:textSize="@dimen/normal_text_size"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/display_pw"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent" />
        </LinearLayout>

        <include layout="@layout/view_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_account"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/sel_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:text="登录" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txt_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_login"
            android:text="忘记密码"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_login"
            android:text="注册"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>
</RelativeLayout>